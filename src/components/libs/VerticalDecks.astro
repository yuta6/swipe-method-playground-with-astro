---
import "swiper/css";
import "swiper/css/navigation";
import "swiper/css/pagination";
---

<div class="deck-container" data-swiper="vertical">
  <ul class="swiper-wrapper decks" role="list" aria-roledescription="carousel">
    <slot />
  </ul>
</div>

<style>
  .deck-container {
    height: 100vh;
    overflow: hidden;
  }
  .decks {
    height: 100vh;
  }
</style>

<script>
  import { Swiper } from "swiper";

  document
    .querySelectorAll('[data-swiper="vertical"]')
    .forEach((container) => {
      if (!(container instanceof HTMLElement)) {
        return;
      }
      new Swiper(container, {
        direction: "vertical",
        slidesPerView: 1,
        spaceBetween: 0,
      });
    });
</script>
