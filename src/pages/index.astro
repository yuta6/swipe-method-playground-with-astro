---
import VerticalDecks from "@/components/libs/VerticalDecks.astro";
import Deck from "@/components/libs/Deck.astro";
import SwipeLPLayout from "@/layouts/SwipeLPLayout.astro";
import Hero from "@/components/contents/Hero.astro";
import TourActivity from "@/components/contents/TourActivity.astro";
import TourByPlane from "@/components/contents/TourByPlane.astro";
import TourHotel from "@/components/contents/TourHotel.astro";
import ReserveButton from "@/components/contents/ReserveButton.astro";

---
<SwipeLPLayout>
  <VerticalDecks showPagination={true}>
    <Deck>
      <Hero />
    </Deck>
    <Deck>
      <TourActivity />
    </Deck>
    <Deck>
      <TourByPlane />
    </Deck>
    <Deck>
      <TourHotel />
    </Deck>
    <ReserveButton slot="overlay" />
  </VerticalDecks>
</SwipeLPLayout>

